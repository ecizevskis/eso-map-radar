<GuiXml>
	<Controls>
		<TopLevelControl name="MapRadarContainer" mouseEnabled="true" movable="true" clampedToScreen="true">
			<Dimensions x="220" y="220" />
			<Anchor point="BOTTOMLEFT" relativeTo="GUI_ROOT" relativePoint="BOTTOMLEFT" offsetX="600" />
			<Controls>
				<Backdrop name="$(parent)BG" inherits="ZO_DarkThinFrame" excludeFromResizeToFitExtents="true" hidden="true">
                    <AnchorFill />
                </Backdrop>
				<Texture name="$(parent)RadarTexture" textureFile="MapRadar/radar.dds" alpha="0.5">
					<Dimensions x="220" y="220"/>
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
				</Texture>

				<Button name="$(parent)Button1" inherits="ZO_ButtonBehaviorClickSound">
					<Dimensions x="40" y="40" />
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" />
					<Textures normal="EsoUI/Art/Buttons/closebutton_up.dds"
						pressed="EsoUI/Art/Buttons/closebutton_down.dds"
						mouseOver="EsoUI/Art/Buttons/closebutton_mouseover.dds"
						disabled="EsoUI/Art/Buttons/closebutton_disabled.dds"/>
					<OnClicked>
						MapRadar_button()
					</OnClicked>
				</Button>
            </Controls>
		</TopLevelControl>

		<Texture name="PinTemplate" virtual="true" />
		<Texture name="PointerTemplate" virtual="true" />
	</Controls>
</GuiXml>