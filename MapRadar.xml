<GuiXml>
	<Controls>
		<TopLevelControl name="MapRadarContainer" mouseEnabled="true" movable="true" clampedToScreen="true">
			<Dimensions x="220" y="220" />
			<Anchor point="BOTTOMRIGHT" relativeTo="GUI_ROOT" relativePoint="BOTTOMRIGHT" offsetX="-300" offsetY="-40" />
			<Controls>
				<Backdrop name="$(parent)BG" inherits="ZO_DarkThinFrame" excludeFromResizeToFitExtents="true" hidden="true">
                    <AnchorFill />
                </Backdrop>
				<Texture name="$(parent)RadarTexture" textureFile="MapRadar/textures/radar.dds" alpha="0.5">
					<Dimensions x="220" y="220"/>
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
				</Texture>

				<Button name="$(parent)Button1" inherits="ZO_ButtonBehaviorClickSound">
					<Dimensions x="40" y="40" />
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" />
					<Textures normal="EsoUI/Art/Buttons/closebutton_up.dds"
						pressed="EsoUI/Art/Buttons/closebutton_down.dds"
						mouseOver="EsoUI/Art/Buttons/closebutton_mouseover.dds"
						disabled="EsoUI/Art/Buttons/closebutton_disabled.dds"/>
					<OnClicked>
						MapRadar_button()
					</OnClicked>
				</Button>
            </Controls>
		</TopLevelControl>

		<Texture name="PinTemplate" virtual="true" />
		<Texture name="PointerTemplate" virtual="true" />

		<Label name="LabelTemplate" virtual="true" font="$(BOLD_FONT)|13|outline" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" />

		<Button name="plusButtonTemplate" inherits="ZO_ButtonBehaviorClickSound" virtual="true" >
			<Dimensions x="30" y="30" />
			<Textures normal="ESOUI/art/buttons/plus_up.dds"
				pressed="ESOUI/art/buttons/plus_down.dds"
				mouseOver="ESOUI/art/buttons/plus_over.dds" />
		</Button>
		<Button name="minusButtonTemplate" inherits="ZO_ButtonBehaviorClickSound" virtual="true" >
			<Dimensions x="30" y="30" />
			<Textures normal="ESOUI/art/buttons/minus_up.dds"
				pressed="ESOUI/art/buttons/minus_down.dds"
				mouseOver="ESOUI/art/buttons/minus_over.dds" />
		</Button>
	</Controls>
</GuiXml>